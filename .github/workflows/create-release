name: Create Release

on:
  workflow_call:

jobs:
  create-release:
    runs-on: ubuntu-latest
    steps:
      - name: Create release
        run: |
          tag="${GITHUB_REF#refs/tags/}"
          repo_name="${GITHUB_REPOSITORY#*/}"
          version="${tag#v}"
          gh release create "$tag" \
            --repo="$GITHUB_REPOSITORY" \
            --title="$repo_name $version" \
            --generate-notes
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
